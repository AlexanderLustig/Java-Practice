import java.util.Scanner;

public class Main19 {
    public static void main(String[] args) {
    
    Scanner scanner = new Scanner(System.in);

    System.out.print("Give me the first number: ");
    double num1 = scanner.nextDouble();

    System.out.print("Give me the second number: ");
    double num2 = scanner.nextDouble();

    System.out.print("Give me what you want me to do with them ( + , - , / , * , ^ ): ");
    char operator = scanner.next().charAt(0);

    double result = 0;

    switch(operator){
        case '+' -> result = num1 + num2;
        case '-' -> result = num1 - num2;
        case '/' -> result = num1 / num2;
        case '*' -> result = num1 * num2;
        case '^' -> result = Math.pow(num1, num2);
        default -> System.out.println("Can't preform because the operator is not a valid option");
    }

    if(result != 0){
        System.out.println(num1 + " " + operator + " " + num2 + " = " + result);
    }


    scanner.close();

    }
}
