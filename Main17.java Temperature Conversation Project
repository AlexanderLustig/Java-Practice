// day 17 (8/01/2025) -- 

import java.util.Scanner;

public class Main17 {
    public static void main(String[] args) {
    Scanner scanner = new Scanner(System.in);

    System.out.println("Do you want to convert F to C (1) or C to F (2)? Input 1 or 2: ");
    int option = scanner.nextInt();
    
    System.out.println("What is the temprature in that degrees?: ");
    double temprature = scanner.nextDouble();

    double finalTemp = 0;

    finalTemp = (option == 1) ? ((temprature - 32) / 1.8) : ((temprature * 1.8) + 32);

    System.out.printf("Converted temperature: %.2f\n", finalTemp);

    scanner.close();
    }
}
